{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "resolveJsonModule": true,

    "types": ["node"],
    "moduleResolution": "node"
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
