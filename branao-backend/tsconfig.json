{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "resolveJsonModule": true,

    "moduleResolution": "node",

    "types": ["node", "express", "multer"]
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
